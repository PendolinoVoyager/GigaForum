{% extends 'base.html.twig' %}

{% block title %}GigaForum{% endblock %}
{% block navbar %}
    {{ include('_navbar.html.twig') }}
{% endblock %}
{% block body %}
    <h1 class="bg:bs-red-700">{{ board.name }}</h1>
    {% for post in board.posts %}
        <div class="card mb-2 shadow-sm">
            <div>
                <a href="{{ path('app_show', {'board': board.id, 'post': post.id}) }}" class="text-decoration-none text-primary-emphasis"><h2>{{ post.title }}</h2></a>
                <div class="text-body-secondary">{{  post.created | date() }}</div>
                Tags:
                {% for tag in post.tags %}
                    <div class="badge bg-secondary">{{ tag }}</div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}

{% endblock %}

{% block hotposts %}
    {{ include('_hotposts.html.twig') }}
{% endblock %}
