<html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
    </head>
    <body>
    {% block navbar %}
    {% endblock %}
    <div class="d-flex justify-content-center">
        {% for type, messages in app.flashes %}
            {% for flash in messages %}
                <div class="alert alert-dismissible alert-{{ type }} mt-2 w-50 text-center" role="alert">
                    {{ flash }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

        {% endfor %}
    </div>

    <div class="card p-3 mx-3 shadow-lg">
        <div class="container-fluid row">
            <div class="container col-lg-8 col-md-8 col-sm-12 bg-transparent">
                {% block body %}
                {% endblock %}
            </div>
                {% block hotposts %}
                {% endblock %}
        </div>
    </div>
    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
    </body>
</html>
