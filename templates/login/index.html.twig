{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block navbar %}
    {{ include('_navbar.html.twig') }}
{% endblock %}
{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center">Login</h2>
                <form action="{{ path('app_login') }}" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Email</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="_password" required>
                    </div>
                    <div class="text-center mb-2">
                        <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                    <div class="text-center">
                        No account? Sign up <a href="{{ path('app_register') }}" class="link-secondary">here!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
